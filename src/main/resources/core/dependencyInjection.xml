<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        https://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- create normal bean -->
    <bean id="motor" class="org.example.core.dependencyInjection.model.Motor">
        <property name="fuerza" value="2000"/>
    </bean>

    <!-- call static factory method -->
    <bean id="motorStatic" class="org.example.core.dependencyInjection.model.Motor"
          factory-method="createInstance" >
        <constructor-arg name="fuerza" value="2345" />
    </bean>

    <!-- call bean factory method -->
    <bean id="motorStaticBean" factory-bean="motor"
          factory-method="createBeanInstance" >
        <constructor-arg name="fuerza" value="9999" />
    </bean>

    <!-- by Name -->
    <bean id="car" class="org.example.core.dependencyInjection.model.Car">
        <property name="kilo" value="0"/>
        <property name="name" value="micar"/>
        <constructor-arg name="motor" ref="motorStatic"/>
    </bean>

    <!-- by type -->
    <bean id="carType" class="org.example.core.dependencyInjection.model.Car">
        <constructor-arg type="java.lang.String" value="carName"/>
        <constructor-arg type="int" value="1000" />
        <constructor-arg type="org.example.core.dependencyInjection.model.Motor"
                         ref="motorStaticBean" />
    </bean>

    <!-- by Setter  -->
    <!-- Requires default class contructor -->
    <bean id="carSetter" class="org.example.core.dependencyInjection.model.Car">
        <property name="name" value="carSetter"/>
        <property name="kilo" value="600"/>
        <property name="motor" ref="motor"/>
    </bean>

</beans>